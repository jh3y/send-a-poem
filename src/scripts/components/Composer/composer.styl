@import '../../../styles/color.styl'

.container
  box-shadow 5px 5px 15px $black
  background-color $white
  overflow hidden
  display grid
  grid-template-rows auto 1fr 60px
  width 300px
  height 400px
  font-size 14px
  @media (min-width 768px)
    width 600px

.label
  font-size 14px
  font-weight 400

.header
  display grid
  grid-template-rows auto 1fr
  grid-template-columns auto 1fr
  align-content center
  justify-content center
  padding 0 10px 10px
  color $grey
  border-bottom 1px solid darken($grey, 15%)

.recipient
.subject
  font-size 14px
  padding-left 12px
  font-weight 400
  color black

.recipient
  border none
  background $white
  font-family Arial, Helvetica, sans-serif

.content
  overflow auto
  margin 10px 0
  padding 0 10px

.actions
  height 60px
  display flex
  justify-content flex-end
  padding 0 10px
  align-items center
  border-top 1px solid darken($grey, 15%)

.line
  font-size 14px
  line-height 22px
  padding 0
  margin 0

  &:nth-child(1)
    color $grey

.send
  background-color $red

  &:hover
    background-color lighten($red, 15%)

  &:active
    background-color darken($red, 20%)